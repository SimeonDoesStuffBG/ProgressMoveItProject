<Page x:Class="ProgressTestApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgressTestApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="146,100,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.34,0.566"/>
        <TextBox HorizontalAlignment="Left" Margin="233,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="295"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="146,137,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.34,0.566"/>
        <PasswordBox HorizontalAlignment="Left" Margin="233,141,0,0" VerticalAlignment="Top" Width="295"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="233,195,0,0" VerticalAlignment="Top" Width="295" Click="DoLogin"/>
    </Grid>
</Page>
